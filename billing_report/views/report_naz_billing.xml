<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<template id="report.style" name="style">

        .table-striped > thead > tr >  th {
           background-color:#642524;
           color:#ffffff;
           font-weight: bold;
        }
        .table-striped > tbody > tr:nth-child(odd) > td {
            background-color:#f0f0f0;
        }
        .table-striped > tbody > tr:nth-child(even) > td {
            background-color:#ffffff;
        }
        .table-bordered {
            border-collapse: collapse;
        }
        .table-bordered > tbody > tr > td,
        .table-bordered > thead > tr > td{
            border: 1px solid #999;
        }
        .table-bordered > thead > tr > th,
        .table > thead:first-child > tr:first-child > th,
        .table > thead:first-child > tr:first-child > td {
            border: 1px solid #999;
            border-top-width: 1px;
        }
        .header-font {
            font-size: 22px;
            font-weight: bold;
        }
        .rowheader-color {
            background-color: #f0f0f0;
        }
        <!-- More of CUSTOM CSS here -->
</template>

<template id="report_naz_billing_header">
    <div class="header">
        <div class="row">
            <div class="col-xs-3">
                <img t-att-src="'data:image/png;base64,'+ o.company_id.logo" style="max-height: 50px;"/>
            </div>
        </div>
    </div>

    <div class="footer">
        <div class="text-center" style="border-top: 1px solid black;">
            <div>
                <b><span t-field="o.company_id.name"/></b> <br/>
                <span t-field="o.company_id.street"/> <span t-field="o.company_id.street2"/>, <span t-field="o.company_id.city"/>-<span t-field="o.company_id.zip"/> <br/>
                <b><span t-field="o.company_id.country_id.name"/> </b>
            </div>
        </div>
    </div>

</template>

<template id="report_naz_billing_new">

    <t t-call="billing_report.report_naz_billing_header" />
    <t t-call="report.external_layout">
        <div class="page">
            <div class="oe_structure"/>
            <div class="row">
                <div class="col-xs-6">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Bill State</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td rowspan="2">
                                    <span class = "header-font" t-if="o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">Bill</span>
                                    <span class = "header-font" t-if="o.type == 'out_invoice' and o.state == 'proforma2'">PRO-FORMA</span>
                                    <span class = "header-font" t-if="o.type == 'out_invoice' and o.state == 'draft'">Draft Bill</span>
                                    <span class = "header-font" t-if="o.type == 'out_invoice' and o.state == 'cancel'">Cancelled Bill</span>
                                    <span class = "header-font" t-if="o.type == 'out_refund'">Refund</span>
                                    <span class = "header-font" t-if="o.type == 'in_refund'">Supplier Refund</span>
                                    <span class = "header-font" t-if="o.type == 'in_invoice'">Supplier Bill</span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-xs-6">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr style="height:48px">
                                <th class="text-center">Date</th>
                                <th class="text-center">Bill#</th>
                                <th class="text-center">Terms</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                            	<td rowspan="2" class="text-center" width="30%">
                                	<span t-if="o.date_invoice">
                                		<span t-esc="time.strftime('%d %b %Y',time.strptime(o.date_invoice,'%Y-%m-%d'))"/>
                                	</span>
                                	<![CDATA[&nbsp;]]>
                                </td>
                                <td rowspan="2" class="text-center"><span t-field="o.number" /><![CDATA[&nbsp;]]></td>
                                <td rowspan="2" class="text-center"><span t-field="o.payment_term.name" /><![CDATA[&nbsp;]]></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-6">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Bill To</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td style="height:157px">
                                    <span t-if="o.partner_id.parent_id.name" >
                                        <span t-field="o.partner_id.parent_id.name"/>
                                    </span>
                                    <span t-field="o.partner_id.name"/>
                                    <div t-field="o.partner_id"
                                         t-field-options='{"widget": "contact", "fields": ["address", "zip", "phone", "fax"], "no_marker": true}'/>
                                    <span t-if="o.partner_id.child_ids" >
                                     	<span style="font-weight:bold;"> Attn: <span t-field="o.partner_id.child_ids[0].name"/><br/>
                                    	<span t-field="o.partner_id.child_ids[0].function"/></span> 
									</span>
                                    
                                    <span t-if="o.partner_id.function" >
                                        <span style="font-weight:bold;"> Attn: <span t-field="o.partner_id.name"/><br/>
                                            <span t-field="o.partner_id.function"/></span>
                                    </span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-xs-6">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Bill From</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td style="height:157px">
                                    <div>
                                        <span t-field="o.company_id.name" /> <br/>
                                        <span t-field="o.company_id.street" /> <br/>
                                        <span t-field="o.company_id.street2" /> <br/>
                                        <span t-field="o.company_id.city" /> <br/>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-6">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Reference</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td height="111px;">
                                    <div>
                                        <span t-field="o.user_id.name" /> <br/>
                                        <span t-field="o.user_id.mobile" />
                                        <![CDATA[Sales Person]]>
                                        <![CDATA[&nbsp;]]>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-xs-6">
                    <table style="background-color:#f0f0f0; padding: 20px;height: 250px;border: 1px solid ;width: 100%;">
                        <thead>
                            <tr style="margin: 13px 25px 13px 13px;padding-bottom: 6px;display: block;">
                                <th colspan="2">For queries please contact</th>
                            </tr>
                            <tr style="margin: 0px 25px 0px 13px;padding-bottom: 6px;display: block;">
                                <th>Email: </th>
                                <td><span t-field="o.company_id.email" /></td>
                            </tr>
                            <tr style="margin: 0px 25px 0px 13px;padding-bottom: 6px;display: block;">
                                <th>Telephone: </th>
                                <td><span t-field="o.company_id.phone" /></td>
                            </tr>
                            <tr style="margin: 0px 25px 22px 13px;padding-bottom: 6px;display: block;">
                                <th>Fax: </th>
                                <td><span t-field="o.company_id.fax" /></td>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>

            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Description</th>
                        <th class="text-center" width="15%">Delivery Date</th>
                        <th class="text-right" width="10%">Qty</th>
                        <th class="text-right" width="15%">Rate</th>
                        <th class="text-right" width="115px">Cost</th>
                    </tr>
                </thead>
                <tbody class="invoice_tbody">
                    <tr t-foreach="o.invoice_line" t-as="l">
                        <td><span t-field="l.name"/></td>
                        <td class="text-center">
                            <span t-if="l.x_delivery_date">
                                <span t-esc="time.strftime('%d-%b-%y',time.strptime(l.x_delivery_date,'%Y-%m-%d %H:%M:%S'))"/>
                            </span>
                        </td>
                        <td class="text-right">
                            <span t-field="l.quantity"/>
                            <span t-field="l.uos_id"  groups="product.group_uom"/>
                        </td>
                        <td class="text-right">
                            <span t-field="l.price_unit"/>
                        </td>
                        <td class="text-right">
                            <span t-field="l.price_subtotal" 
                                t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="row">
                <div class="col-xs-5 pull-right">
                    <table class="table table-striped table-bordered">
                        <tr class="border-black">
                            <td><strong>Sub Total</strong></td>
                            <td class="text-right" width="115px">
                                <span t-field="o.amount_untaxed" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                            </td>
                        </tr>
                        <tr>
                            <td>Sales Taxes (@0%)</td>
                            <td class="text-right">
                                <span t-field="o.amount_tax" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                            </td>
                        </tr>
                        <tr class="border-black">
                            <td><strong>Total Payable</strong></td>
                            <td class="text-right">
                                 <span t-field="o.amount_total" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-6">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th colspan="2">Banking Info</th>
                            </tr>
                            <tr>
                                <th width="160px">Bank</th>
                                <td><span t-field="o.partner_bank_id.bank_name" /></td>
                            </tr>
                            <tr>
                                <th>Account Name</th>
                                <td><span t-field="o.partner_bank_id.partner_id" /></td>
                            </tr>
                            <tr>
                                <th>Account Number</th>
                                <td><span t-field="o.partner_bank_id.acc_number"/></td>
                            </tr>
                            <tr>
                                <th>Routing Number</th>
                                <td>***</td>
                            </tr>
                        </thead>
                    </table>
                </div>
                <div class="col-xs-6">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Notes</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td height="151px"><span t-field="o.comment"/></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </t>
</template>

<template id="report_naz_billing">
    <t t-call="report.html_container">
      <t t-foreach="doc_ids" t-as="doc_id">
        <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'billing_report.report_naz_billing_new')"/>
      </t>
    </t>
  </template>

</data>
</openerp>
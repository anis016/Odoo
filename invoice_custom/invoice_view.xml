<openerp>
    <data>
        <record id="view_account_invoice_custom_form" model="ir.ui.view">
            <field name="name">account.invoice.form.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <!-- <xpath expr="//field[@name='section_id']" position="before">
                    <field name="x_sales_person" widget="selection"/>
                </xpath> -->

                <!-- <xpath expr="//field[@name='user_id']" position="replace" >
                     <field name="user_id" />
                </xpath> -->
                
                <xpath expr="//field[@name='date_invoice']" position="after">
                    <field name="x_project_id"/>
                </xpath>

                <xpath expr="//field[@name='invoice_line']/tree/field[@name='name']" position="after">
                    <field name="x_delivery_date"/>
                </xpath>
	        </field>
	    </record>
	    
	    <record id="view_account_invoice_supplier_form" model="ir.ui.view">
            <field name="name">account.invoice.form.inherit.supplier</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_invoice']" position="after">
                    <field name="x_project_id"/>
                </xpath>
	        </field>
	    </record>
	    
    </data>
</openerp>
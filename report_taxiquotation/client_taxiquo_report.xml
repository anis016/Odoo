<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <report
            id="report_taxi_club_mgmt_quo_id"
            model="sale.order"
            string="Taxi Report Quotation"
            report_type="qweb-pdf"
            name="report_taxiquotation.report_taxi_club_mgmt_quo"
            file="report_taxiquotation.report_taxi_club_mgmt_quo"
        />

        <record id="paperformat_lowmargin" model="report.paperformat">
        	<field name="name">Custom A4 Margin</field>
   		    <field name="default" eval="True" />
    		<field name="format">A4</field>
    		<field name="page_height">0</field>
    		<field name="page_width">0</field>
    		<field name="orientation">Portrait</field>
    		<field name="margin_top">50</field> <!-- Controls the header height -->
    		<field name="margin_bottom">7</field> <!-- Controls the footer height -->
    		<field name="margin_left">4</field>
    		<field name="margin_right">4</field>
    		<field name="header_line" eval="False" />
    		<field name="header_spacing">40</field> <!-- Controls the body starting from the top page -->
    		<field name="dpi">90</field>
		</record>

		<record id="report_taxiquotation.report_taxi_club_mgmt_quo_id" model="ir.actions.report.xml">
    		<field name="paperformat_id" ref="report_taxiquotation.paperformat_lowmargin" />
		</record>

    </data>
</openerp>

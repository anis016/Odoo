<data>

<template id="report.style" name="style">
    <style type="text/css">
        body {
            color: #000 !important;
        }
        .cush {
            font-size: 22px;
            color: black;
            font-weight: 900;
        }
        .underline {
            display: inline-block;
            padding: 0 10px;
            width: 50px;
            border-bottom: 1px dotted #888;
        }
        .centered-text {
            text-align: center;
        }
        .cusb {
            font-size: 18px;
        }
        .right-text {
            text-align: right;
        }
        <!-- More of CUSTOM CSS here -->
    </style>
</template>

<template id="report_anl_agreement_header">
    <div class="header">
        <div class="row">
            <div class="col-xs-12 text-center">
                <p class="cush" t-field="o.warehouse_id.name"></p>
                <p><span t-field="o.warehouse_id.partner_id.street"/> <span t-field="o.warehouse_id.partner_id.street2"/>
              Tel: <span t-field="o.warehouse_id.partner_id.phone"/> Fax: <span t-field="o.warehouse_id.partner_id.fax"/> <br/>
              Website: <span t-field="o.warehouse_id.partner_id.website"/> Email: <span t-field="o.warehouse_id.partner_id.email"/> <br/>
              UEN No.: <span t-field="o.warehouse_id.partner_id.nea_license"/> </p>
            </div>
         </div>
    </div>

    <div class="footer">
    </div>

</template>

<template id="report_anl_agreement_body">
    <t t-call="report_rental.report_anl_agreement_header" />

    <t t-call="report.external_layout">
        <div class="page">
            <div class="oe_structure"/>
            <div class="row">
                <div class="col-xs-6">
                    <div class="col-xs-offset-5">
                        <br/>
                        <span class="cusb right-text">VEH NO.: <span t-field="o.folio_id.room_lines.product_id"/></span>
                    </div>
                    RENT TO:
                </div>
                <div class="col-xs-6">
                    <div class="col-xs-offset-6">
                        <span class="cusb right-text">Rental Agreement</span> <br/>
                        <span class="cusb right-text">NO. <span t-field="o.reservation_no"/></span> <br/>

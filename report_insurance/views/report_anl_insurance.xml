<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<template id="report.style" name="style">
    <style type="text/css">
        body {
            color: #000 !important;
        }
        .cush {
            font-size: 22px;
        }
        .cusb {
            font-color: white;
            font-size: 18px;
        }
    <!-- More of CUSTOM CSS here -->
    </style>
</template>

<template id="report_anl_insurance_header">
    <div class="header">
            <div class="row text-center">
                <p class="cush">A&amp;L AUTOMOBILE PTE LTD</p>
                <div t-field="o.warehouse_id.partner_id"
                     t-field-options='{"widget": "contact", "fields": ["address", "zip", "phone", "fax", "vat"], "no_marker": true}'/>
                <p class="cusb">PAYMENT NOTICE</p>
            </div>
    </div>

    <div class="footer">
        <div class="text-center" style="border-top: 1px solid black;">
            <br/>
            <ul class="list-inline">
                <li>Page:</li>
                <li><span class="page"/></li>
                <li>/</li>
                <li><span class="topage"/></li>
            </ul>
        </div>
    </div>
</template>

<template id="report_anl_insurance_body">
    <!--If you want to add customize header and footer then add the following lines and customize-->
    <t t-call="report_insurance.report_anl_insurance_header" />

    <!--If you want to add default header and footer dont add anything-->

    <t t-call="report.external_layout">
        <div class="page">
            <div class="oe_structure"/>
            <br/><br/>
            <div class="row">
                <div class="col-xs-8">
                    <table style=" padding: 20px;height: 250px;width: 100%;">
                        <thead>
                            <tr style="margin: 0px 25px 0px 13px;padding-bottom: 6px;display: block;">
                                <th>Insured: </th>
                                <td><span t-field="o.partner_id"/></td>
                            </tr>
                            <tr style="margin: 0px 25px 39px 13px;padding-bottom: 6px;display: block;">
                                <th>Address: </th>
                                <td><div t-field="o.partner_id"
                                         t-field-options='{"widget": "contact", "fields": ["address", "zip", "phone", "fax"], "no_marker": true}'/></td>
                            </tr>
                            <tr style="margin: 0px 25px 2px 13px;padding-bottom: 6px;display: block;">
                                <th>Attn:</th>
                                <td>
                                    <span t-if="o.partner_id.child_ids" >
                                        <span t-field="o.partner_id.child_ids[0].name"/>
                                    </span>

                                    <span t-if="o.partner_id.function" >
                                        <span t-field="o.partner_id.name"/>
                                    </span>
                                </td>
                            </tr>
                            <tr style="margin: 0px 25px 0px 13px;padding-bottom: 6px;display: block;">
                                <th>Contact No.: </th>
                                <td><span t-field="o.partner_id.mobile"/></td>
                            </tr>
                            <tr style="margin: 0px 25px 0px 13px;padding-bottom: 6px;display: block;">
                                <th>Fax No.: </th>
                                <td><span t-field="o.partner_id.fax"/></td>
                            </tr>
                        </thead>
                    </table>
                </div>
                <div class="col-xs-4">
                    <strong>Date: </strong> <span t-esc="time.strftime('%d/%m/%Y',time.strptime(o.date_order,'%Y-%m-%d %H:%M:%S'))"/> <br/>
                    <strong>Source: </strong> <span t-field="o.name"/> <br/>
                    <strong>Ref no.: </strong> <span t-field="o.client_order_ref"/> <br/>
                </div>
            </div>
            <br/><br/>
            <div class="row">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th width="10%"><strong>No</strong></th>
                            <th class="text-center"><strong>Description</strong></th>
                            <th class="text-center" width="200px"><strong>Amount (Included of GST)</strong></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="o.insurance_lines" t-as="l">
                            <td>
                                <span>1. </span>
                            </td>
                            <td class="text-left">
                                <span>Vehicle No. : </span> <span t-field="o.reservation_id.vehicle_no"/> <br/>
                                <span>Make : </span> <span t-field="o.reservation_id.vehicle_model"/> <br/>
                                <span>YOR : </span> <span t-field="o.reservation_id.y_o_m"/> <br/>
                                <span>C/I No. : </span> XXXXXXXXXXX <br/>
                                <span>Coverage : </span> <span t-field="o.reservation_id.coverage"/> <br/>
                                <span>Period : </span> <span t-esc="time.strftime('%d/%m/%Y',time.strptime(o.policy_start,'%Y-%m-%d'))"/> ~ <span t-esc="time.strftime('%d/%m/%Y',time.strptime(o.policy_end,'%Y-%m-%d'))"/> <br/>
                                <span>NCD : </span> XXXXXXXXXXX <br/> <br/>
                                <span>LESS DISCOUNT</span>
                            </td>
                            <td class="text-left">
                                <span t-field="o.amount_untaxed"
                                t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                <br/> <br/> <br/> <br/> <br/> <br/> <br/> <br/>
                                <span t-field="o.discount_amt"
                                t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <span><![CDATA[&nbsp;]]></span>
                            </td>
                            <td class="text-left">
                                <span>TOTAL</span>
                            </td>
                            <td class="text-left">
                                <span t-field="o.amount_total"
                                t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <br/><br/><br/>
            <br/><br/><br/>
            <div class="row">
                <div class="col-xs-8">
                    <div>
                        <strong>____________________________</strong><br/>
                        <strong class="text-left">Signatory</strong><br/>
                    </div>
                </div>
            </div>

        </div>
    </t>
</template>

<template id="report_anl_insurance">
    <t t-call="report.html_container">
      <t t-foreach="doc_ids" t-as="doc_id">
        <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'report_insurance.report_anl_insurance_body')"/>
      </t>
    </t>
</template>

</data>
</openerp>

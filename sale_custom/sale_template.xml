<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_sale_order_custom_form" model="ir.ui.view">
            <field name="name">sale.order.custom.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/header/button[@name='action_quotation_send']" position="after">
                    <button name="append_to_message_communication" string="Save PDF" type="object" icon="gtk-go-forward" confirm="Are you sure you want to do this?"/>
                </xpath>
         <!--   <xpath expr="//field[@name='user_id']" position="after">
                    <field name="user_id" widget="selection"/>
                </xpath>
 		  -->
                <xpath expr="//field[@name='client_order_ref']" position="after">
                    <field name="x_project_id"/>
                </xpath>

                 <xpath expr="//field[@name='user_id']" position="attributes" >
                     <attribute name='invisible'>1</attribute>
                </xpath>
            </field>
	    </record>
    </data>
</openerp>
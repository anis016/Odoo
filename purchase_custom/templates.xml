<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_purchase_custom_form" model="ir.ui.view">
            <field name="name">res.purchase.custom.form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_ref']" position="after">
                    <field name="purpose_type" />
                    <field name="purpose" />
                    <field name="x_project_id" />
                </xpath>

                <xpath expr="//field[@name='picking_type_id']" position="after">
                    <field name="payment_mode" />
                    <field name="shipping_time" />
                </xpath>

                <xpath expr="//field[@name='amount_tax']" position="after">
                    <field name="discount" widget="monetary" options="{'currency_field': 'currency_id'}"  />
                    <field name="tran_other" widget="monetary" options="{'currency_field': 'currency_id'}"  />
                </xpath>

                <xpath expr="//notebook" position="inside" >
                    <page string="Assignee" >
                        <field name="assignee" widget="many2many" />
                    </page>
                </xpath>

                <xpath expr="//field[@name='amount_total']" position="replace">
                    <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                </xpath>

                <xpath expr="//field[@name='shipped']" position="after">
                    <field name="shipping_method" widget="many2one"/>
                    <field name="shipping_terms" />
                </xpath>

                <xpath expr="//field[@name='picking_type_id']" position="after">
                    <field name="req_by"/>
                </xpath>

                <!--<xpath expr="//field[@name='shipped']" position="after">
                    <field name="shipping_method" attrs="{'invisible':[('state','=','draft')]}" />
                    <field name="shipping_terms"  attrs="{'invisible':[('state','=','draft')]}" />
                </xpath>-->

               <!-- <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after" >
                    <field name="job_name" />
                </xpath>-->

                <!--<xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after" >
                    <field name="job_name" invisible="context.get('state','False')" /> # This removes the particular row from the column
                </xpath>-->

                <!--<xpath expr="//page[@string='RFQ &amp; Bid']" position="attributes" > # Hides the notebook
                     <attribute name='invisible'>1</attribute>
                </xpath>

                <xpath expr="//field[@name='minimum_planned_date']" position="attributes" > # Hides a field
                     <attribute name='invisible'>1</attribute>
                </xpath>-->

	        </field>
	    </record>

    </data>
</openerp>
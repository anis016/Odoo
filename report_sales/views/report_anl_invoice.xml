<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<template id="report.style" name="style">
    <style type="text/css">
        body {
            color: #000 !important;
        }
        .cush {
            font-size: 22px;
            color: black;
        }
        .underline {
            display: inline-block;
            padding: 0 10px;
            width: 50px;
            border-bottom: 1px dotted #888;
        }
        .centered-text {
            text-align: center;
        }
        .right-text {
            text-align: right;
        }
        .thick-header {
            font-size: 16px;
            font-weight: bold;
        }
        <!-- More of CUSTOM CSS here -->
    </style>
</template>

<template id="report_anl_invoice_header">
    <div class="header">
        <div class="row">
            <div class="col-xs-12 text-center">
                <p class="cush">A&amp;L AUTOMOBILE PTE LTD</p>
                <p><span t-field="o.company_id.street"/> <span t-field="o.company_id.street2"/>
                   TEL: <span t-field="o.company_id.phone"/> FAX: <span t-field="o.company_id.fax"/> <br/>
                   UEN NO.: <span t-field="o.company_id.vat"/> </p>
            </div>
        </div>
        <div class="row zero_min_height">
            <div class="col-xs-12">
                <div style="border-bottom: 1px solid black;"/>
            </div>
        </div>
    </div>

    <div class="footer">
        <div class="text-center" style="border-top: 1px solid black;">
            <br/>
            <ul class="list-inline">
                <li>Page:</li>
                <li><span class="page"/></li>
                <li>/</li>
                <li><span class="topage"/></li>
            </ul>
        </div>
    </div>
</template>

<template id="report_anl_invoice_body">
    <t t-call="report_sales.report_anl_invoice_header" />
    <t t-call="report.external_layout">
        <div class="page">
            <div class="oe_structure"/>
            <p class="cush centered-text">SALES INVOICE</p> <br/>

            <div class="row">
                <div class="col-xs-6 pull-left">
                    <strong class="thick-header">TO: </strong> <span t-field="o.partner_id.name"/>
                    <div style="padding-left:32px">
                        <div t-field="o.partner_id"
                             t-field-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'/>
                    </div>
                </div>
                <div class="col-xs-6 right-text">
                    <strong class="thick-header" style="text-align:left; padding-right:63px;">Date    :  </strong> <strong><span style="text-align:right;" t-field="o.date_invoice"/></strong> <br/>
                    <strong class="thick-header" style="text-align:left; padding-right:50px;">Inv No. :  </strong> <strong><span style="text-align:right;" t-field="o.number"/></strong>
                </div>
            </div>
            <br/>

            <strong>ATTN: ACCOUNTS DEPT</strong> <br/><br/>
            <strong>Tel: </strong> <span t-field="o.company_id.phone"></span> <br/>
            <strong>Fax: </strong> <span t-field="o.company_id.fax"></span> <br/> <br/>

            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th><strong>No</strong></th>
                        <th><strong>Description</strong></th>
                        <th class="text-right"><strong>Qty</strong></th>
                        <th class="text-right"><strong>Unit Price</strong></th>
                        <th class="text-right"><strong>Amount</strong></th>
                    </tr>
                </thead>
                <tbody class="sale_tbody">
                    <tr t-foreach="o.invoice_line" t-as="l">
                        <td>
                            <span t-esc="str(l_index+1)"/>
                        </td>
                        <td>
                            <span t-field="l.name"/>
                        </td>
                        <td class="text-right">
                            <span t-field="l.quantity"/>
                            <span t-field="l.uos_id"  groups="product.group_uom"/>
                        </td>
                        <td class="text-right">
                            <span t-field="l.price_unit" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                        </td>
                        <td class="text-right">
                            <span t-field="l.price_subtotal" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="row">
                <div class="col-xs-5 pull-right">
                    <table class="table table-condensed">
                        <tr class="border-black">
                            <td><strong>Grand Total</strong></td>
                            <td class="text-right">
                                 <span t-field="o.amount_total" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>

            <br/><br/>
            <div class="row">
                <div class="col-xs-8">
                    <div>
                        <p>A&amp;L AUTOMOBILE PTE LTD</p> <br/><br/><br/>
                        <strong>____________________________</strong><br/>
                        <strong>Signatory</strong><br/>
                    </div>
                </div>
                <div class="col-xs-4">
                    <strong>CONFIRM</strong><br/>
                </div>
            </div>

        </div>
    </t>
</template>

<template id="report_anl_invoice">
    <t t-call="report.html_container">
      <t t-foreach="doc_ids" t-as="doc_id">
        <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'report_sales.report_anl_invoice_body')"/>
      </t>
    </t>
</template>

</data>
</openerp>
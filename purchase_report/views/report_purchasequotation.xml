<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<template id="report.style" name="style">

        .table-striped > thead > tr >  th {
           background-color:#642524;
           color:#ffffff;
            font-weight: bold;
        }
        .table-striped > tbody > tr:nth-child(odd) > td {
            background-color:#f0f0f0;
        }
        .table-striped > tbody > tr:nth-child(even) > td {
            background-color:#ffffff;
        }
        .table-bordered {
            border-collapse: collapse;
        }
        .table-bordered > tbody > tr > td,
        .table-bordered > thead > tr > td{
            border: 1px solid black;
        }
        .table-bordered > thead > tr > th,
        .table > thead:first-child > tr:first-child > th,
        .table > thead:first-child > tr:first-child > td {
            border: 1px solid black;
            border-top-width: 1px;
        }
        .header-font {
            font-size: 22px;
            font-weight: bold;
        }
        <!-- More of CUSTOM CSS here -->
</template>

<template id="report_naz_purchase_quo_header">
    <div class="header">
        <div class="row">
            <div class="col-xs-3">
                <img t-att-src="'data:image/png;base64,'+ o.company_id.logo" style="max-height: 50px;"/>
            </div>
            <div class="col-xs-9 text-right" style="margin-top:20px;">
                <p class="header-font">Purchase Requisition</p>
            </div>
        </div>
    </div>

    <div class="footer">
        <div class="text-center" style="border-top: 1px solid black;">
            <div>
                <b><span t-field="o.company_id.name"/></b> <br/>
                <span t-field="o.company_id.street"/> <span t-field="o.company_id.street2"/>, <span t-field="o.company_id.city"/>-<span t-field="o.company_id.zip"/> <br/>
                <b><span t-field="o.company_id.country_id.name"/> </b>
            </div>
        </div>
    </div>
</template>

<template id="report_purchasequotation_document">
    <t t-call="purchase_report.report_naz_purchase_quo_header" />
    <t t-call="report.external_layout">
        <div class="page" >
            <div class="oe_structure"/>

            <div class="row mt32 mb32">
                <div class="col-xs-6">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Purpose Type</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td rowspan="2"><span t-field="o.purpose_type"/><![CDATA[&nbsp;]]></td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="col-xs-6">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th class="text-center">Requested By</th>
                                <th class="text-center" width="30%">Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td rowspan="2" class="text-center"><span t-field="o.req_by"/></td>
                                <td rowspan="2" class="text-center"><span t-esc="time.strftime('%d %b %Y',time.strptime(o.date_order,'%Y-%m-%d %H:%M:%S'))"/></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-6">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th width="130px">Assignee</th>
                                <td><span t-field="o.assignee.name"/></td>
                            </tr>
                            <tr>
                                <th>Mobile</th>
                                <td><span t-field="o.assignee.mobile_phone"/></td>
                            </tr>
                            <tr>
                                <th>NO of PR</th>
                                <td><span t-field="o.assignee.notes"/></td>
                            </tr>
                            <tr height="60px">
                                <th style="vertical-align: top;">Comments</th>
                                <td><span t-field="o.assignee.notes"/></td>
                            </tr>
                        </thead>
                    </table>
                </div>

                <div class="col-xs-6">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Purpose</th>
                                <td><span t-field="o.purpose"/></td>
                            </tr>
                            <tr>
                                <th>Vendor</th>
                                <td>
                                    <span t-field="o.partner_id.parent_id.name"/>
                                    <span t-field="o.partner_id.name"/></td>
                            </tr>
                            <tr height="60px">
                                <th style="vertical-align: top;">Address</th>
                                <td><span style="display:inline-block;" t-field="o.partner_id.street" /> <span t-field="o.partner_id.street2" /> <span t-field="o.partner_id.city" /> <span t-field="o.partner_id.country_id.name" /> </td>
                            </tr>
                            <tr>
                                <th>Mobile</th>
                                <td><span t-field="o.partner_id.mobile"/></td>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>

            <h3>
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Request for Quotation: <span t-field="o.name"/>
                            </th>
                        </tr>
                    </thead>
                </table>
            </h3>

            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Item Number and/or Description</th>
                        <th class="text-center" width="10%">Qty</th>
                        <th class="table-header text-center" width="15%">Unit Cost</th>
                        <th class="table-header text-right" width="115px">Ext. Cost</th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="o.order_line" t-as="order_line">
                        <td>
                            <span t-field="order_line.name"/>
                        </td>
                        <td class="text-center">
                            <span t-field="order_line.product_qty"/>
                            <span t-field="order_line.product_uom" groups="product.group_uom"/>
                        </td>
                        <td class="text-center">
                            <span t-field="order_line.price_unit"/>
                        </td>
                        <td class="text-right">
                            <span t-field="order_line.price_subtotal"
                                t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="row">
                <div class="col-xs-7">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th width="130px">Payment Mode</th>
                                <td><span t-field="o.payment_mode"/></td>
                            </tr>
                            <tr>
                                <th>Shipping Time</th>
                                <td><span t-field="o.shipping_time"/></td>
                            </tr>
                            <tr>
                                <th>Arrival Date</th>
                                <td><span t-field="o.minimum_planned_date"/></td>
                            </tr>
                            <tr>
                                <th>Comments</th>
                                <td><span t-field="o.notes"/></td>
                            </tr>
                        </thead>
                    </table>
                </div>

                <div class="col-xs-5 pull-right">
                    <table class="table table-striped table-bordered">
                        <tr class="border-black">
                            <td><strong>SubTotal</strong></td>
                            <td class="text-right" width="115px">
                                <span t-field="o.amount_untaxed"
                                    t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                            </td>
                        </tr>
                        <tr>
                            <td>Discount*</td>
                            <td class="text-right">
                                <span t-field="o.discount"
                                    t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                            </td>
                        </tr>
                        <tr>
                            <td>Transport and Others</td>
                            <td class="text-right">
                                <span t-field="o.tran_other"
                                    t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                            </td>
                        </tr>
                        <tr class="border-black">
                            <td><strong style="font-size:20px;">Total Payable</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount_total"
                                    t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">*Depends on Vendor(s) Strategy</td>
                        </tr>
                    </table>
                </div>
            </div>

            <div class="row mt32 mb32">
                <div class="col-xs-7">
                    <strong>Management Approval: </strong> <br></br>
                    <br></br>
                    <strong>__________________________</strong>
                </div>

                <div class="col-xs-5">
                    <strong>Finance Approval: </strong> <br></br>
                    <br></br>
                    <strong>__________________________</strong>
                </div>
            </div>
<!--
            <span>Regards,</span>
            <span t-field="user.signature"/>
-->
            <div class="oe_structure"/>
        </div>
    </t>
</template>

<template id="report_purchasequotation">

    <t t-call="report.html_container">
        <t t-foreach="doc_ids" t-as="doc_id">
            <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'purchase_report.report_purchasequotation_document')"/>
        </t>
    </t>
</template>
</data>
</openerp>
    

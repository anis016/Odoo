<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<template id="report.style" name="style">

        .table-striped > thead > tr >  th {
           background-color:#642524;
           color:#ffffff;
           font-weight: bold;
        }
        .table-striped > tbody > tr:nth-child(odd) > td {
            background-color:#f0f0f0;
        }
        .table-striped > tbody > tr:nth-child(even) > td {
            background-color:#ffffff;
        }
        .table-bordered {
            border-collapse: collapse;
        }
        .table-bordered > tbody > tr > td,
        .table-bordered > thead > tr > td{
            border: 1px solid black;
        }
        .table-bordered > thead > tr > th,
        .table > thead:first-child > tr:first-child > th,
        .table > thead:first-child > tr:first-child > td {
            border: 1px solid black;
            border-top-width: 1px;
        }
        .header-font {
            font-size: 22px;
            font-weight: bold;
        }
        <!-- More of CUSTOM CSS here -->
</template>

<template id="report_naz_purchase_ord_header">
    <div class="header">
        <div class="row">
            <div class="col-xs-3">
                <img t-att-src="'data:image/png;base64,'+ o.company_id.logo" style="max-height: 50px;"/>
            </div>
            <div class="col-xs-9 text-right" style="margin-top:20px;">
                <p class="header-font">Purchase Order</p>
            </div>
        </div>
    </div>

    <div class="footer">
        <div class="text-center" style="border-top: 1px solid black;">
            <div>
                <b><span t-field="o.company_id.name"/></b> <br/>
                <span t-field="o.company_id.street"/> <span t-field="o.company_id.street2"/>, <span t-field="o.company_id.city"/>-<span t-field="o.company_id.zip"/> <br/>
                <b><span t-field="o.company_id.country_id.name"/> </b>
            </div>
        </div>
    </div>
</template>

<template id="report_purchaseorder_document">
    <t t-call="purchase_report.report_naz_purchase_ord_header" />
    <t t-call="report.external_layout">
        <div class="page">
            <div class="oe_structure"/>

            <div class="row">
                <div class="col-xs-6">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th style="vertical-align: top;">Vendor</th>
                                <td style="height:150px">
                                    <div t-field="o.partner_id"
                                         t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true}'/>
                                    <p t-if="o.partner_id.vat">VAT: <span t-field="o.partner_id.vat"/></p>
                                </td>
                            </tr>
                        </thead>
                    </table>
                </div>
                <div class="col-xs-6">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th style="vertical-align: top;">Ship To</th>
                                <td style="height:150px">
                                    <div t-if="o.dest_address_id">
                                        <div t-field="o.dest_address_id"
                                             t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true}'/>
                                    </div>
                                    <div t-if="not o.dest_address_id and o.picking_type_id and o.picking_type_id.warehouse_id">
                                        <span t-field="o.picking_type_id.warehouse_id.name"/>
                                        <div t-field="o.picking_type_id.warehouse_id.partner_id"
                                             t-field-options='{"widget": "contact", "fields": ["address", "phone", "fax"], "no_marker": true}'/>
                                    </div>
                                </td>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>

            <h3>
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                <span t-if="o.state != 'draft'">Purchase Order Confirmation: <span t-field="o.name"/></span>
                                <span t-if="o.state == 'draft'">Request for Quotation: <span t-field="o.name"/></span>
                            </th>
                        </tr>
                    </thead>
                </table>
            </h3>

            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Shipping Method</th>
                        <th>Shipping Terms</th>
                        <th width="20%">Order Date</th>
                        <th width="20%">Delivery Date</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><span t-field="o.shipping_method"/></td>
                        <td><span t-field="o.shipping_terms"/></td>
                        <td><span t-field="o.date_order" t-field-options='{"format": "dd/mm/y"}' /></td>
                        <td><span t-field="o.minimum_planned_date"/></td>
                    </tr>
                </tbody>
            </table>

            <br/>

            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th><strong>Item#</strong></th>
                        <th><strong>Description</strong></th>
                        <th class="text-right" width="10%"><strong>Qty</strong></th>
                        <th class="text-right" width="15%"><strong>Unit Price</strong></th>
                        <th class="text-right" width="115px"><strong>Line Total</strong></th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="o.order_line" t-as="line">
                        <td>
                            <span t-field="line.product_id"/>
                        </td>
                        <td>
                            <span t-field="line.name"/>
                        </td>
                        <td class="text-right">
                            <span t-field="line.product_qty"/>
                            <span t-field="line.product_uom.name" groups="product.group_uom"/>
                        </td>
                        <td class="text-right">
                            <span t-field="line.price_unit"/>
                        </td>
                        <td class="text-right">
                            <span t-field="line.price_subtotal"
                                t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="row">
                <div class="col-xs-7">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <p>
                                    1. Please send two copies of your invoice.<br />
                                    2. Enter this order in accordance with the prices, Items, delivery method, and specifications listed above. <br />
                                    3. Please notify us immediately if you are unable to ship as specified.<br />
                                    4. Send all correspondence to: <br/>
                                    <div>
                                        <span t-field="o.picking_type_id.warehouse_id.name"/>
                                        <div t-field="o.picking_type_id.warehouse_id.partner_id"
                                             t-field-options='{"widget": "contact", "fields": ["address", "zip", "phone", "fax"], "no_marker": true}'/>
                                    </div>
                                </p>
                            </tr>
                        </thead>
                    </table>
                </div>

                <div class="col-xs-5 pull-right">
                    <table class="table table-striped table-bordered">
                        <tr class="border-black">
                            <td><strong>SubTotal</strong></td>
                            <td class="text-right" width="115px">
                                <span t-field="o.amount_untaxed"
                                    t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                            </td>
                        </tr>
                        <tr>
                            <td>Sales Tax</td>
                            <td class="text-right">
                                <span t-field="o.amount_tax"
                                    t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                            </td>
                        </tr>
                        <tr>
                            <td>Discount*</td>
                            <td class="text-right">
                                <span t-field="o.discount"
                                    t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                            </td>
                        </tr>
                        <tr>
                            <td>Transport and Others</td>
                            <td class="text-right">
                                <span t-field="o.tran_other"
                                    t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                            </td>
                        </tr>
                        <tr class="border-black">
                            <td><strong>Total</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount_total"
                                    t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>

            <!--<p t-field="o.notes"/>-->

            <div class="row mt32 mb32">
                <div class="col-xs-7">
                    <strong>Authorized By: </strong>
                    <strong>__________________________</strong>
                </div>

                <div class="col-xs-5">
                    <strong>Date: </strong>
                    <span t-esc="time.strftime('%Y-%m-%d')"/>
                </div>
            </div>

            <br/>
            <div class="oe_structure"/>
        </div>
    </t>
</template>

<template id="report_purchaseorder">
    <t t-call="report.html_container">
        <t t-foreach="doc_ids" t-as="doc_id">
            <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'purchase_report.report_purchaseorder_document')"/>
        </t>
    </t>
</template>
</data>
</openerp>
